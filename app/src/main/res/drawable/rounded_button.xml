<!-- res/drawable/rounded_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#D3D3D3"/> <!-- Shadow color -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item android:top="5dp" android:left="5dp">
        <shape>
            <solid android:color="#2C3E50"/> <!-- Button color (adjust as needed) -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
