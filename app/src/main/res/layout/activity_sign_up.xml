<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    >

    <!-- ImageView with Sign Up and Sign In -->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="0dp">

        <!-- Full width image with rounded corners -->
        <ImageView
            android:id="@+id/image_with_rounded_corners"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            android:background="@drawable/roundedimage"
            android:clipToOutline="true"/>

        <!-- Sign Up and Sign In buttons aligned horizontally -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="-50dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/sign_up_underlined"
                android:layout_marginEnd="50dp"
                android:textColor="#f5f5f5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Sign In"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#f5f5f5" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main login section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Welcome back message -->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Create An Account"
            android:textColor="#2d1abd"
            android:textSize="30dp" />
        <EditText
            android:id="@+id/editTextText12"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/googlebutton"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="15dp"
            android:drawableStartTint="@color/black"
            android:paddingStart="20dp"
            android:hint="Full Name"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            />
        <!-- Email input field -->
        <EditText
            android:id="@+id/editTextText"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/googlebutton"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="15dp"
            android:drawableStartTint="@color/black"
            android:paddingStart="20dp"
            android:hint="Email"
            android:inputType="text"
            />

        <!-- Password input field -->
        <EditText
            android:id="@+id/editTextText1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/googlebutton"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawableEnd="@drawable/baseline_visibility_off_24"
            android:drawablePadding="15dp"
            android:drawableStartTint="@color/black"
            android:drawableEndTint="@color/black"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:hint="Password"
            android:inputType="textPassword"/>
    </LinearLayout>



    <!-- Sign In button and alternative sign-in methods -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- Sign In Button -->
        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_gravity="center"
            android:elevation="5dp" />

        <!-- Or Sign in with text -->
        <TextView
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-------Or Sign up with-------"
            android:textColor="#141411"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Google and Facebook buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/googlebutton"
            android:padding="12dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_google"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>
        <!-- Google Sign In Button -->
        <!--        <Button-->
        <!--            android:id="@+id/googleButton"-->
        <!--            android:layout_width="150dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/googlebutton"-->
        <!--            android:text="Google"-->
        <!--            android:textColor="#000000"-->
        <!--            android:textStyle="bold"-->
        <!--            android:padding="12dp"-->
        <!--            android:iconSize="24dp"-->
        <!--            android:elevation="5dp"-->
        <!--            android:drawableStart="@drawable/icons8_google"-->
        <!--            android:drawablePadding="8dp" />-->

        <!-- Facebook Sign In Button -->
        <!--        <Button-->
        <!--            android:id="@+id/facebookButton"-->
        <!--            android:layout_width="150dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="10dp"-->
        <!--            android:background="@drawable/facebookbutton"-->
        <!--            android:text="Facebook"-->
        <!--            android:textColor="#FFFFFF"-->
        <!--            android:textStyle="bold"-->
        <!--            android:padding="12dp"-->
        <!--            android:elevation="5dp"-->
        <!--            android:drawableStart="@drawable/icons8_facebook"-->
        <!--            android:drawablePadding="8dp"-->
        <!--            android:iconSize="24dp"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/facebookbutton"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_facebook"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="40dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@android:color/white"

        >

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
